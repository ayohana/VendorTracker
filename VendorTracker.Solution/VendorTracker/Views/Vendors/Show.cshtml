@using VendorTracker.Models;
@{
  Layout = "_Layout";
}

<h3>@Model["vendor"].Name</h3>
<h4>Description: @Model["vendor"].Description</h4>

@if (Model["orders"].Count == 0)
{
  <p>This vendor currently does not have any orders.</p>
}
else
{
  <h4>List of all orders for @Model["vendor"].Name:</h4>
  <ul id="orderList">
    @foreach (Order order in Model["orders"])
    {
      <li>
        <a href='/vendors/@Model["vendor"].ID/orders/@order.ID'>@order.Title</a>
      </li>
    }
  </ul>
}

<a href='/vendors/@Model["vendor"].ID/orders/new'>Add a new order</a>
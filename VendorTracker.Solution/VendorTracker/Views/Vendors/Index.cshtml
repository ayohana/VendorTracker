@using VendorTracker.Models;
@{
  Layout = "_Layout";
}

@if (@Model.Count == 0)
{
  <h3>There are currently no vendors saved.</h3>
}
else
{
  <h3>List of all Vendors for Della's Bakery:</h3>
  <ul id="vendorList">
  @foreach(Vendor vendor in Model)
  {
    <li>
      <h3><a href="/vendors/@vendor.ID">@vendor.Name</a></h3>
    </li>
  }
  </ul>
}

<a href="/vendors/new">Add a vendor</a>
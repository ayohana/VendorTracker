@using VendorTracker.Models;
@{
  Layout = "_Layout";
}

<h4>@Model["vendor"].Name</h4>
<h5>About: @Model["vendor"].Description</h4>

@if (Model["orders"].Count == 0)
{
  <p>This vendor currently does not have any orders.</p>
}
else
{
  <h5>List of orders:</h5>
  <ul id="orderList">
    @foreach (Order order in Model["orders"])
    {
      <li>@order.Title</li>
      <ul>
        <li>Order Description: @order.Description</li>
        <li>Quantity: @order.Quantity</li>
        <li>Price: $@order.Price</li>
        <li>Requested Delivery Date: @order.DeliveryDate.ToShortDateString()</li>
      </ul>
    }
  </ul>
}

<a href='/vendors/@Model["vendor"].ID/orders/new'>Add a new order</a>